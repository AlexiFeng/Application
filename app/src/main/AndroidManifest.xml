<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexi.demo0851">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".bangyang.bangyang_ListActivity"
            android:label="@string/title_stitem_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bangyang.bangyang_DetailActivity"
            android:label="@string/title_stitem_detail"
            android:parentActivityName=".bangyang.bangyang_ListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alexi.demo0851.bangyang.bangyang_ListActivity" />
        </activity>
        <activity
            android:name=".zhaozanzhu.ZhaoZZ"
            android:label="@string/title_activity_zhao_zz"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alexi.demo0851.MainActivity" />
        </activity>
        <activity
            android:name=".zhaozanzhu.Content_ZhaoZZ"
            android:label="@string/title_activity_content__zhao_zz"
            android:parentActivityName=".zhaozanzhu.ZhaoZZ"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alexi.demo0851.zhaozanzhu.ZhaoZZ" />
        </activity>
        <activity
            android:name=".zhaozanzhu.NewZanzhu"
            android:label="@string/title_activity_new_zanzhu"
            android:parentActivityName=".zhaozanzhu.ZhaoZZ"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alexi.demo0851.zhaozanzhu.ZhaoZZ" />
        </activity>
    </application>

</manifest>