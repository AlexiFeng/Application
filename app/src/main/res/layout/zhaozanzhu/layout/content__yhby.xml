<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alexi.demo0851.Content_YHBY"
    tools:showIn="@layout/activity_content__yhby">

    <TextView
        android:id="@+id/title_YHBY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="标题"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/publish_YHBY" />

    <ImageView
        android:id="@+id/headerAuthor_YHBY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_YHBY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帖子内容"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/title_YHBY"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/title_YHBY"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_YHBY" />

    <TextView
        android:id="@+id/author_YHBY"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#72ACE3"
        android:text="作者"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintLeft_toRightOf="@+id/headerAuthor_YHBY"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/publish_YHBY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/author_YHBY"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/author_YHBY" />

    <TextView
        android:id="@+id/comment_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:text="评论数(1)"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerAuthor_YHBY"
        app:layout_constraintRight_toLeftOf="@+id/textView23"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="277dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/comment_Total"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_Total">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#72ACE3"
                android:text="冰镇地瓜"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="293dp" />

            <TextView
                android:id="@+id/comment_YHBY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评论区"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="293dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阅读量:7"
        android:layout_marginTop="139dp"
        app:layout_constraintTop_toBottomOf="@+id/headerAuthor_YHBY"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
